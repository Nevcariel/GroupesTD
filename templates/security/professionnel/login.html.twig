{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block main %}
<div class="col-lg-4 offset-lg-4 mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Connexion</h3>
        </div>
        
        <div class="card-body">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
            {{ form_start(loginForm) }}
                {{ form_row(loginForm.username) }}
                {{ form_row(loginForm.password) }}
                <button type="submit" class="btn btn-primary"><i class="fa fa-lock"></i> Connexion</button>
            {{ form_end(loginForm) }}
        </div>
    </div>
</div>
{% endblock %}

