{% extends 'admin/dashboard.html.twig' %}

{% block title %}Admin - Liste des groupes {{ promo }}{% endblock %}

{% block main %}
<div class="col-lg-8">
    <h3>Liste des groupe pour la promotion {{ promo }}</h3>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Nom du groupe</th>
                <th>Etudiants</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td>{{ groupe.getNom() }}</td>
                {% for etudiant in groupe.getEtudiants() %}
                    {% if loop.first %}
                        <td>{{ etudiant }}</td>
                    {% else %}
                        <tr>
                            <td></td>
                            <td>{{ etudiant }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}