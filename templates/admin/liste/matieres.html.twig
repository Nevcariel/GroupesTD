{% extends 'admin/dashboard.html.twig' %}
{% block main %}

    <div class="card col-lg-6">
        {% for matiere in matieres %}
            <div class="card-body">
                <h3 class="card-title">{{ matiere.getIntitule() }}</h3>
                <p class="card-text">{{ matiere.getDescription() }}</p>
                <p class="text-muted">
                    Enseignant : 
                    {% for enseignant in matiere.getEnseignants() %}
                        {{ enseignant.getPrenom() }} {{ enseignant.getNom() }}.
                    {% endfor %}
                </p>
                <a href="{{ path('admin_edit_matiere', {'matiere' : matiere.getId()}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-edit"></i> Modifier</a>
                <a href="#" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-trash-alt"></i> Supprimer</a>
            </div>
        {% endfor %}
    </div>
</div>
    <a href="{{ path('admin_add_matiere') }}" class="offset-lg-2 btn btn-secondary btn-sm mb-4" role="button" aria-pressed="true"><i class="fas fa-plus"></i> Ajouter</a>

{% endblock %}