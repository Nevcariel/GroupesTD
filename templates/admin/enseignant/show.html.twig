{% extends 'admin/dashboard.html.twig' %}

{% block title %}Enseignant{% endblock %}

{% block body %}
<div class="col-lg mt-3">
    <h1>Enseignant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enseignant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ enseignant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ enseignant.prenom }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ enseignant.entreprise }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}" class="btn btn-secondary btn-sm m-1" role="button" aria-pressed="true"><i class="fas fa-pen"></i></a>

    {{ include('enseignant/_delete_form.html.twig') }}

    <a href="{{ path('enseignant_index') }}" class="btn btn-secondary btn-sm m-1" role="button" aria-pressed="true"><i class="fas fa-arrow-left"></i> retour</a>
</div>
{% endblock %}