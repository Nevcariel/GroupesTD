{% extends 'admin/dashboard.html.twig' %}

{% block title %}Csv{% endblock %}

{% block main %}
<div class="col-lg mt-3">
    <h1>Csv</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ csv.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ csv.file }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ csv.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_csv_edit', {'id': csv.id}) }}" class="btn btn-secondary btn-sm m-1" role="button" aria-pressed="true"><i class="fas fa-pencil-alt"></i></a>

    {{ include('admin/csv/_delete_form.html.twig') }}

    <a href="{{ path('admin_csv_index') }}" class="btn btn-secondary btn-sm m-1" role="button" aria-pressed="true"><i class="fas fa-arrow-left"></i> retour</a>
</div>
{% endblock %}