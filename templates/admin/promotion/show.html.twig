{% extends 'admin/dashboard.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block main %}
<div class="col-lg mt-3">
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>AnneeDebut</th>
                <td>{{ promotion.anneeDebut }}</td>
            </tr>
            <tr>
