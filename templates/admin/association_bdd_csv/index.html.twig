{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des Associations Bdd Csv{% endblock %}

{% block main %}
<div class="col-lg mt-3">
    <h1>Liste des Associations Bdd Csv</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association_bdd_csv in association_bdd_csvs %}
            <tr>
                <td>{{ association_bdd_csv.id }}</td>
                <td>
                    <a href="{{ path('admin_association_bdd_csv_show', {'id': association_bdd_csv.id}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-eye"></i>
                    <a href="{{ path('admin_association_bdd_csv_edit', {'id': association_bdd_csv.id}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-pencil-alt"></i></a>
                    {{ include('admin/association_bdd_csv/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_association_bdd_csv_new') }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-plus"></i></a>
</div>
{% endblock %}