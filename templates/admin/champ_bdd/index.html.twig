{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des Champs BDD{% endblock %}

{% block main %}
<div class="col-lg mt-3">
    <h1>Liste des Champs BDD</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for champ_bdd in champ_bdds %}
            <tr>
                <td>{{ champ_bdd.id }}</td>
                <td>{{ champ_bdd.intitule }}</td>
                <td>
                    <a href="{{ path('admin_champ_bdd_show', {'id': champ_bdd.id}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_champ_bdd_edit', {'id': champ_bdd.id}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-pencil-alt"></i></a>
                    {{ include('admin/champ_bdd/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_champ_bdd_new') }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true"><i class="fas fa-plus"></i></a>
</div>
{% endblock %}